@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col"></div>
    <div class="col-md-5">
        <section>
            <form id="account" method="post" class="uk-align-center">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="uk-margin">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="uk-input" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="uk-margin">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="uk-input" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="uk-margin">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" class="uk-checkbox" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="uk-button uk-button-secondary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
